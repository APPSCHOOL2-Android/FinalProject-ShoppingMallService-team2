<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imageViewRowBoardWriterImage"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/account_circle_24px" />

    <LinearLayout
        android:layout_width="209dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewRowBoardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/highLightColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewRowBoardWriter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/highLightColor"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewRowBoardWriteDate"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/soft_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRowBoardLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/favorite_fill_24px"
                android:text="TextView"
                android:textColor="@color/highLightColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewRowBoardComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/chat_24px"
                android:text="TextView"
                android:textColor="@color/highLightColor"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>