<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutRowPurchaseHistoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginBottom="50dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewRowPurchaseHistoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="2023-09-29"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="@id/constraintLayoutRowPurchaseHistoryContainer"
            app:layout_constraintTop_toTopOf="@id/constraintLayoutRowPurchaseHistoryContainer" />

        <Button
            android:id="@+id/buttonRowPurchaseHistory"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> 주문 상세보기"
            android:textColor="#002AFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <LinearLayout
            android:id="@+id/LayoutInner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/textViewRowPurchaseHistoryDate"
            />
<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/recyclerViewRowPurchaseHistory"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:layout_marginHorizontal="5dp"-->
<!--            app:layout_constraintStart_toStartOf="@id/constraintLayoutRowPurchaseHistoryContainer"-->
<!--            app:layout_constraintTop_toBottomOf="@id/textViewRowPurchaseHistoryDate" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>