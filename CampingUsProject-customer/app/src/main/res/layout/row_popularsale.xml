<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewRowPopularSaleProductImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewRowPopularSaleProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/highLightColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewRowPopularSaleProductBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/highLightColor"
            android:textSize="@dimen/text_size_3" />

        <TextView
            android:id="@+id/textViewRowPopularSaleProductOriginalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/highLightColor"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textViewRowPopularSaleProductDiscountPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/highLightColor"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewRowPopularSaleLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/favorite_fill_24px"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/highLightColor"
        android:textSize="11sp" />

</LinearLayout>